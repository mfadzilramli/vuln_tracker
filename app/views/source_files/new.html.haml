.panel.panel-info
  .panel-heading
    %h4
      %span.glyphicon.glyphicon-upload
      - if (controller.action_name != 'edit')
        &nbsp;Upload Source
      - else
        &nbsp;Update Source
  .panel-body
    = render 'form'

  .panel-footer
    = link_to 'Back', source_files_path, class: "btn btn-primary"
