.panel.panel-success
  .panel-heading
    %h3
      %span.glyphicon.glyphicon-option-vertical
      Listing Source Data
  .panel-body
    %table.table
      %thead
        %tr
          %th Title
          %th Filename
          %th Create Date
          %th
      %tbody
        - @source_files.each do |source_file|
          %tr
            %td.valign= source_file.title
            %td.valign= source_file.filename
            %td.valign= source_file.created_at
            %td.valign{ align: 'right' }
              = link_to 'Edit Title', edit_source_file_path(source_file.id),
                class: "btn btn-sm btn-primary"
              = link_to  'List Host', source_file_affected_hosts_path(source_file.id),
                class: "btn btn-sm btn-primary"
              = link_to 'Delete', source_file,
                :method => :delete,
                :data => { :confirm => 'Are you sure?' },
                class: "btn btn-sm btn-raised btn-danger"
