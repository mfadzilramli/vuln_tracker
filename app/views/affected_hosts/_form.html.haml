= form_for @affected_host, remote: true do |f|
  .panel.panel-default{ id: 'myEditForm'}
    .panel-heading
      = "Host Details: #{@affected_host.host_ip}"
    .panel-body
      %table.table
        %thead
          %th Host FQDN
          %th Netbios Name
          %th MAC Address
          %th Platform
          %th Operating System
        %tbody
          %td= f.text_field :host_fqdn, class: "form-control"
          %td= f.text_field :netbios_name, class: "form-control"
          %td= f.text_field :mac_address, class: "form-control"
          %td= f.text_field :platform, class: "form-control"
          %td.col-sm-4
            = f.text_area :operating_system, class: "form-control"
    .panel-footer
      = f.submit :update, class: "btn btn-primary"
      = link_to "Back", :back, { class: "btn btn-primary" }
