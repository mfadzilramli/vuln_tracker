.panel.panel-default{ id: "editForm_#{host.id}"}
  .panel-heading
    = "Host Details: #{host.host_ip}"
  .panel-body
    %table.table
      %thead
        %th Host FQDN
        %th Netbios Name
        %th MAC Address
        %th Platform
        %th Operating System
      %tbody
        %td= host.host_fqdn
        %td= host.netbios_name
        %td= host.mac_address
        %td= host.platform
        %td.col-sm-4
          - if host.operating_system?
            %pre= host.operating_system
  .panel-footer
    = link_to 'Edit', edit_affected_host_path(host), remote: true, class: "btn btn-primary"
    = link_to "Back", :back, { class: "btn btn-primary" }
