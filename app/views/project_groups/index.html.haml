.panel.panel-success
  .panel-heading
    %h3
      %span.glyphicon.glyphicon-option-vertical
      Listing Project Groups
  .panel-body
    %table.table
      %thead
        %tr{ bgcolor: '#efefef' }
          %th Project Name
          %th Date Created
          %th Date Updated
          %th
      %tbody
        - @project_groups.each do |project_group|
          %tr
            -# %td= project_group.name.split.map(&:capitalize).join(' ')
            %td.valign= link_to project_group.name,
              stats_project_group_path(project_group)
            %td.valign= project_group.created_at
            %td.valign= project_group.updated_at
            %td.valign{ align: 'right' }
              = link_to 'Select Source', edit_project_group_path(project_group),
                class: "btn btn-sm btn-primary"
              = link_to 'Delete', project_group,
                :method => :delete,
                :data => { :confirm => 'Are you sure?' },
                class: "btn btn-sm btn-danger"

  .panel-footer
    = link_to new_project_group_path, class: "btn btn-raised btn-primary" do
      %span.glyphicon.glyphicon-plus{aria_hidden: "true"}
      New Project
