= render 'shared/errors_alert', obj: @project_group

.panel.panel-default
  .panel-body
    = form_for @project_group do |f|
      .form-group.form-group-lg
        -# = f.label :name, class: "control-label"
        = f.text_field :name, class: "form-control floating-label", style: "width: 300px", placeholder: "Project Name"
      .form-group
      - if (controller.action_name == 'edit')
        = button_tag class: "btn btn-primary" do
          %span.glyphicon.glyphicon-save{aria_hidden: "true"}
          Update
        = link_to project_groups_path, class: "btn btn-primary" do
          %span.glyphicon.glyphicon-chevron-left{aria_hidden: "true"}
          Back
      - else
        = button_tag class: "btn btn-primary" do
          %span.glyphicon.glyphicon-save{aria_hidden: "true"}
          Save
        = link_to project_groups_path, class: "btn btn-primary" do
          %span.glyphicon.glyphicon-chevron-left{aria_hidden: "true"}
          Back
